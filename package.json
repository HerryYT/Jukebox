{
  "private": true,
  "name": "jukebox",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "echo 'We need to setup ava first'",
    "build": "oao all tsc",
    "watch": "oao all --parallel \"tsc -w --preserveWatchOutput\"",
    "status": "oao status",
    "bootstrap": "oao bootstrap",
    "run": "tsc config.sample.ts && node -r source-map-support packages/jukebox/lib/index.js config.sample.js"
  },
  "devDependencies": {
    "@types/node": "12.7.12",
    "ava": "2.4.0",
    "husky": "3.0.9",
    "oao": "1.7.0",
    "prettier": "1.18.2",
    "pretty-quick": "2.0.0",
    "source-map-support": "0.5.16",
    "ts-node": "8.4.1",
    "typescript": "3.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
