{
  "private": true,
  "name": "jukebox",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "echo 'We need to setup ava first'",
    "format": "yarn prettier --write .",
    "build": "oao all tsc --tree",
    "watch": "oao all --parallel \"tsc -w --preserveWatchOutput\"",
    "status": "oao status",
    "bootstrap": "oao bootstrap",
    "run": "tsc config.sample.ts && node -r source-map-support packages/jukebox/lib/index.js config.sample.js"
  },
  "devDependencies": {
    "@types/node": "12.7.12",
    "ava": "2.4.0",
    "husky": "3.0.9",
    "oao": "1.7.0",
    "prettier": "2.2.1",
    "pretty-quick": "2.0.0",
    "source-map-support": "0.5.16",
    "ts-node": "8.4.1",
    "typedoc": "^0.20.33",
    "typescript": "4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "@thi.ng/bitstream": "^1.1.38"
  }
}
